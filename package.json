{
  "name": "hello-fargate",
  "version": "1.0.0",
  "description": "hobby experiment playing with fargate",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js --abort-on-uncaught-exception",
    "lint": "eslint",
    "clean": "rm -rfv dist/",
    "build": "tsc",
    "test": "jest --coverage --verbose",
    "docker-build": "DOCKER_BUILDKIT=1 docker build . -t $npm_package_name:$npm_package_version -t $npm_package_name:latest -t 979037402244.dkr.ecr.us-west-2.amazonaws.com/joshpeak/$npm_package_name:$npm_package_version -t 979037402244.dkr.ecr.us-west-2.amazonaws.com/joshpeak/$npm_package_name:latest",
    "docker-dev": "npm run docker-build && docker run --name $npm_package_name --rm -P $npm_package_name",
    "docker-push": "docker push 979037402244.dkr.ecr.us-west-2.amazonaws.com/joshpeak/$npm_package_name:$npm_package_version",
    "ci": "npm run clean && npm run lint && npm run build && npm run test"
  },
  "author": "Josh Peak <neozenith.dev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/log4js": "^2.3.5",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.14.5",
    "@types/throng": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "express": "^4.17.1",
    "log4js": "^6.3.0",
    "mongoose": "^5.10.11",
    "source-map-support": "^0.5.19",
    "throng": "^5.0.0"
  }
}
